<style>
    #auth-validation{
        
        margin-top: 20px;
    }

    .input-group {
        justify-content: center;
    }

    #signup-email {
        width: 200px;
        height: 45px;
    }
    #signup-nick {
        width: 200px;
        height: 45px;
    }
    #signup-password {
        width: 200px;
        height: 45px;
    }

    .title {
