<style>
    .mt-3 {
        display: flex;
        flex-direction: column;
        align-items: center;
        margin-top: 0px;
    }
    
    #kpop-news-title {
        display: flex;
        justify-content: center;
        font-weight: 600;
        margin: 0px;
    }

    #news-container-box {
        display: flex;
        align-items: center
    }

    #news-container {
        margin-top: 40px;
        width: 100%;
        justify-content: center;
    }

    .card {
        margin-left: 0px;
        margin-right: 0px;
    }

    .col {
        display: flex;
        justify-content: center;
        margin-bottom: 5px;
        margin-left: 0px;
        margin-right: 0px;
        padding: 0px;
        border: 0px;
    }

    .card-text {
        margin: 0px;
        font-size: small;
        font-weight: 600;
    }
    .card-date-text {
        margin: 0px;
        margin-top: 5px;
        font-size: smaller;
        color: rgb(110, 110, 110);
    }

    .card-text-blank {
        font-size: small;
        font-weight: 600;
        margin: 0px;
        padding: 0px;
        /* padding-bottom: 18px; */
    }

    .arrow-icons {
        margin-top: 220px;
    }

    #right-icon {
        margin-left: 35px;
    }

    #left-icon {
        margin-right: 35px;
    }

    .card img {
        border-radius: 5px;
    } 

    .card-body {
        display: flex;
        height: 105px;
        flex-direction: column;
        justify-content: space-between;
    }

    #spinner-box{
        display: flex;
        justify-content: center;
        margin-top: 60px;
        margin-bottom: 10px;
    }
</style>

<body>
    <%-include('./topNav')%>
<!-- --------------------------------------------------------------------------------------------------------------- -->
    </div>
    
    <main class="mt-3">
        <h2 id="kpop-news-title">K-POP 뉴스</h2>

<!-- --------------------------------------------------------------------------------------------------------------- -->
            <!-- 스피너 -->
            <div id="spinner-box">
                <div id="spinner" class="spinner-border text-info" style="width: 5rem; height: 5rem;" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
            </div>
<!-- --------------------------------------------------------------------------------------------------------------- -->
        
        <!-- 뉴스 붙이는곳 -->
